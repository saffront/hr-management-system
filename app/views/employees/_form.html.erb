  <% end %>

  <div class="field form-group mb-3">
    <%= form.text_field :employee_id, class:"form-control", placeholder:"Employee ID" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :email, class:"form-control", placeholder:"Email"  %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :job, class:"form-control", placeholder:"Job"  %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :salary, class:"form-control", placeholder:"Salary"  %>
  </div>

  <div class="field form-group mb-3">
    <%= form.text_field :employment_status, class:"form-control", placeholder:"Status"  %>
  </div>

   <div class="field form-group mb-3" class="form-control">
    <%= form.select :team_id,Team.all.pluck(:name,:id),{prompt:'Team'},{class: "form-control"}%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
