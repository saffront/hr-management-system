<div id="<%= dom_id employee %>">
  <p>
    <strong>Employee ID:</strong>
    <%= employee.employee_id %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= employee.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= employee.email %>
  </p>

  <p>
    <strong>Job:</strong>
    <%= employee.job %>
  </p>

  <p>
    <strong>Salary:</strong>
    <%= employee.salary %>
  </p>

  <p>
    <strong>Employment status:</strong>
    <%= employee.employment_status %>
  </p>

  <p>
    <strong>Team Name:</strong>
    <%= employee.team.name %>
  </p>

</div>
